        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="544dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/bt_up2"
        android:layout_width="382dp"
        android:layout_height="274dp"
